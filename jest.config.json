{
    "preset": "ts-jest",
    "testEnvironment": "jest-environment-jsdom",
    "roots": ["<rootDir>/tests"],
    "testMatch": ["**/*.spec.ts"],
    "moduleNameMapper": {
        "^@/(.*)$": "<rootDir>/src/$1"
    },
    "transform": {
        "^.+\\.(ts|tsx)$": ["ts-jest", { "tsconfig": "./tsconfig.json" }]
    },
    "setupFiles": ["./setup.jest.ts"]
}
